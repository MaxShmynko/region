.promo
    font-family $ff-BebasNeueBold
    position relative
    background-color $c-black
    width 100%
    height 100%
    overflow hidden
    +below(720px)
        height wm(1930)

    &__container-content
        position relative
        padding w(120) 0 w(220) w(290)
        +below(720px)
            padding wm(220) wm(20) 0 wm(20)


    &__container-title
        text-transform uppercase
        background linear-gradient(180deg, #AE0793 0%, #979327 100%)
        background-clip text
        -webkit-background-clip text
        -webkit-text-fill-color transparent
        font-size w(68)
        font-weight 700
        padding-left w(220)
        +below(720px)
            padding-left wm(200)
            font-size wm(68)


    &__container-title-text
        width w(490)
        +below(720px)
            width 100%

    &__promo-C
        position absolute
        width w(229)
        height w(287)
        left w(275)
        top w(50)
        +below(720px)
            width wm(192)
            height wm(241)
            left wm(20)
            top wm(190)

    &__voron-bg
        position absolute
        width w(234)
        right wm(270)
        top wm(60)
        +below(720px)
            display none

    &__container-text 
        color $c-text
        margin-top w(22)
        width w(800)
        font-size w(21)
        font-family $ff-BerlingskeSerif-Lt
        font-weight 300
        line-height w(27)
        +below(720px) 
            width wm(590)
            text-align center
            font-size wm(20)
            margin wm(19) wm(50)
            line-height wm(26)

    &__bg
        position absolute
        width w(1920)
        bottom 0
        +below(720px)
            display none

    &__bg-mobail
        display none
        +below(720px)
            display block
            position absolute
            bottom 0
            width 100%

    &__button
        position relative
        margin-top w(35)
        width w(705) 
        display flex
        justify-content center
        gap w(34)
        z-index 2
        +below(720px)
            width 100%
            margin-top wm(30)
            gap wm(24)

    
    &__button-link
        text-transform uppercase
        color $c-white
        text-decoration none
        background-color $c-btn
        font-size w(48)
        line-height w(39)
        border-radius w(15)
        padding w(15) w(30)
        transition 0.5s
        &:hover
            background-color $c-btn-hover
        +below(720px)
            display flex
            align-items center
            padding 0 wm(30) wm(5) wm(30)
            height wm(64)
            border-radius wm(15)
            font-size wm(48)
            line-height wm(39)
            padding-top wm(10)

    &__signature
        position relative
        color $c-btn
        text-align center
        font-size w(26)
        font-family $ff-BerlingskeSerif-Lt
        line-height w(30)
        z-index 2
        a
          color $c-linck
          text-decoration underline
        +below(720px)
            font-size wm(24)
            line-height wm(28)
            margin 0

    &__age
        position absolute
        width w(60)
        height w(44)
        bottom  w(15)
        left w(10)
        +below(720px)
            width wm(60)
            height wm(44)
            left auto
            right wm(17)
            bottom  wm(17)


.logo
        position absolute
        width w(432)
        height w(189)
        top w(46)
        right w(57)
        z-index 2
        +below(720px)
            width wm(309)
            height wm(135)
            top wm(25)
            right wm(45)
.bg-sky
        position absolute
        top 0
        left 0
        width w(1400)
        height w(270)
        +below(720px)
            width wm(837)
            height wm(168)

